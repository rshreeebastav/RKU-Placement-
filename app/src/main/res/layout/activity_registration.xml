<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:gravity="center"
    android:background="#fff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="#FF9800"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:title="Create account"
                    app:titleMarginStart="10dp"
                    app:titleTextColor="#FFF" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Here's your first step with us!"
                    android:textColor="#F39C12"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="200dp"
                    android:gravity="center"
                    android:src="@drawable/registration" />

            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                android:textColorHint="@color/teal_700"
                app:errorEnabled="true">
            <EditText
                android:id="@+id/fn"
                android:layout_width="326dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_design"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="12dp"
                android:hint="Full Name"
                android:padding="15dp"
                android:textColor="#C14A4848"
                android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/teal_700"
                app:endIconMode="clear_text"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/email_reg"
                    android:layout_width="326dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edit_design"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="12dp"
                    android:hint="Email Address"
                    android:padding="15dp"
                    android:textColor="#C14A4848"
                    android:textColorHint="@color/teal_700" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/teal_700"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                app:passwordToggleEnabled="true">


                <EditText
                    android:id="@+id/password_reg"
                    android:layout_width="326dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="password"
                    android:background="@drawable/edit_design"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="12dp"
                    android:ems="15"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:padding="15dp"
                    android:textColor="#C14A4848"
                    android:textColorHint="@color/teal_700" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/teal_700"
                app:errorEnabled="true"
                app:endIconMode="clear_text"
                app:passwordToggleEnabled="true">


                <EditText
                    android:id="@+id/cp1"
                    android:layout_width="326dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="password"
                    android:background="@drawable/edit_design"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="12dp"
                    android:ems="15"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:padding="15dp"
                    android:textColor="#C14A4848"
                    android:textColorHint="@color/teal_700" />


            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="330dp"
                android:layout_height="49dp"
                android:background="#fff"
                android:text="I have confirm this terms and conditions."
                android:textColor="@color/black"
    android:layout_gravity="center"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_reg"
                android:layout_width="155dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_design"
                android:text="REGISTER HERE"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"

                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Already Account?"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.07999998" />

            <Button
                android:id="@+id/btn_login"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="163dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Login Here"

                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="Please note that by register the placement you have accepted our Terms and Condition"
                android:textColor="#838382"
                android:textSize="15dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>